{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Express Server",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": ["--inspect=9229", "--nolazy"],
        "program": "${workspaceFolder}/src/server.ts",
        "cwd": "${workspaceFolder}",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "sourceMaps": true
      }
    ]
  }
